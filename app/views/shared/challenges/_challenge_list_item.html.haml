= link_to challenge_path(challenge), :class => 'list-group-item', display: 'inline' do
  %span.badge.primary
    = "#{challenge.readings_count} chapters"
  %h4.list-group-item-heading
    = "#{challenge.name}"

  %p.list-group-item-text
    = "#{challenge.begindate.strftime("%b %d, %Y")} - #{challenge.enddate.strftime("%b %d, %Y")}"

  %p.list-group-item-text
    - challenge.members.limit(20).each do |m|
      = image_tag avatar_url(m, 30), title: m.name, class: 'img-circle'
