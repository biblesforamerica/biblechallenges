- todays_readings.each do |r|
  %h4
    %br
    = r.book_and_chapter
    %br
    - verses = r.chapter.by_version(current_user.bible_version)
    %br
    %h5
      #verses
        - verses.each do |v|
          = v.decorate.to_div

  -if current_user.bible_version == "RCV"
    %center
      %strong
        Verses accessed from the Holy Bible Recovery Version (text-only edition) Â© 2012 Living Stream Ministry www.lsm.org

  %br
    = render partial: 'shared/challenges/log_todays_reading', locals: {link_text: r.book_and_chapter, membership: @membership, todays_reading: r }

  %br
  %br
  - unless r.discussion.blank?
    %h5 For Discussion:
    = r.discussion
