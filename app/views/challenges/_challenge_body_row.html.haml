.panel-body
  = "Members: #{challenge.members.size}"
  - challenge.members.each do |m|
    = image_tag avatar_url(m, 30), title: m.username
  = "Chapters: #{challenge.readings.size}"
  .pull-right
    - if current_user && @membership = challenge.membership_for(current_user)
      = link_to "Show Challenge", challenge_path(challenge), :class => 'btn btn-primary', display: 'inline'
    - elsif 
      = link_to "Join Challenge", member_challenge_memberships_path(challenge_id: challenge.id), method: :post, :class => 'btn btn-success', display: 'inline'
.col-md-3
  = "Total Chapters To Read: #{challenge.readings.size}"
.col-md-3
  = "Total Chapters Read: #{challenge.membership_readings.size}"
.col-md-3
  = "Start Date: #{challenge.begindate.strftime("%b %d, %Y")}"
.col-md-3
  = "End Date: #{challenge.enddate.strftime("%b %d, %Y")}"
