.section.primary
  .container
    .title
      = @challenge.name
    .subtitle
      %b
        = @challenge.chapters_to_read
      %br
      = @challenge.begindate.strftime("%-m/%-d/%Y")
      = "-"
      = @challenge.enddate.strftime("%-m/%-d/%Y")
    - @challenge.members.each do |m|
      = render 'shared/avatar', user: m
    %br
    %br

    .subtitle
      = render 'shared/challenges/challenge_instructions'

    %br 
    .centered
      - if current_user
        = link_to "Join Challenge", member_challenge_memberships_path(challenge_id: @challenge.id), method: :post, :class => 'btn block-center', display: 'inline'
      - unless current_user
        = link_to "Sign me up", new_user_registration_path(challenge_id: @challenge.id), :class => 'btn btn-primary'

.section.grey
  .container
    %h4 Groups
    = render partial: 'groups', locals: { groups: @challenge.groups }
    = render partial: 'shared/challenges/challenge_statistics', locals: {challenge: @challenge}

.section.grey
  .container
    .panel.panel-primary
      .panel-heading Readings
      = render partial: 'readings', locals: {readings: @readings }
