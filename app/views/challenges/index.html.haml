.container
  .row
    .col-md-12
      %h1 Bible Challenges
      %br
      %p.lead Create a Bible Reading Challenge for a church, small group, or student organization.  Or just for yourself.
      %br
      %a.btn.btn-lg.btn-success{href: new_creator_challenge_path} Create a Challenge


  - unless @public_challenges.empty?
    %h2 Or take a look at some of the current challenges

    .row
    - @public_challenges.each do |challenge|
      .col-md-12
        = link_to challenge.name, challenge_path(challenge)
        %br
        = "Members: #{challenge.members.size}"
        - challenge.members.each do |m|
          = image_tag avatar_url(m, 30), title: m.username
        %br
        = "Chapters: #{challenge.readings.size}"
      .col-md-3
        = "Total Chapters To Read: #{challenge.readings.size}"
      .col-md-3
        = "Total Chapters Read: #{challenge.membership_readings.size}"
      .col-md-3
        = "Start Date: #{challenge.begindate.strftime("%b %d, %Y")}"
      .col-md-3
        = "End Date: #{challenge.enddate.strftime("%b %d, %Y")}"

