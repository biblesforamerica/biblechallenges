.pull-right
  %a.btn.btn-xs.btn-success{href: new_challenge_path} Create A New Challenge

%h4 Challenges
%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th Name
      %th Begin Date
      %th.hidden-xs End Date
      %th 
  - @challenges.each do |challenge|
    %tr
      %td= link_to challenge.name, challenge
      %td= challenge.begindate
      %td.hidden-xs= challenge.enddate
      %td= link_to 'Details', creator_challenge_path(challenge)
%br/
