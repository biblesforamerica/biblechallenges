.pull-right
  %a.btn.btn-xs.btn-success{href: new_creator_challenge_url(subdomain:false)} Create A New Challenge

%h4 Joined Challenges
%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th Name
      %th Begin Date
      %th.hidden-xs End Date
      %th.hidden-xs Active?
  - @challenges.each do |challenge|
    %tr
      %td= link_to challenge.name, "http://" + subdomain_url(challenge.subdomain)
      %td= challenge.begindate
      %td.hidden-xs= challenge.enddate
      %td.hidden-xs= challenge.active ? "Yes" : "No"
%br/

- if @created_challenges.count > 0
  %h4 Created Challenges
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Begin Date
        %th.hidden-xs End Date
        %th Active?
        %th 
    - @created_challenges.each do |challenge|
      %tr
        %td= link_to challenge.name, "http://" + subdomain_url(challenge.subdomain)
        %td= challenge.begindate
        %td.hidden-xs= challenge.enddate
        %td= challenge.active ? "Yes" : "No"
        %td= link_to 'Details', creator_challenge_path(challenge)
  %br/
