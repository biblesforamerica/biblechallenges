.container
  .row
    .col-md-12
      %h1 Bible Challenges
      %br
      %p.lead Create a Bible Reading Challenge for a church, small group, or student organization.  Or just for yourself.
      %br
      %a.btn.btn-lg.btn-success{href: new_challenge_path} Create a Challenge


  - unless @public_challenges.empty?
    %h2 Or take a look at some of the current challenges

    .row
    - @public_challenges.each do |challenge|
      .col-md-6
        = link_to challenge.name, challenge_path(challenge)
        %br
        = "Members: #{challenge.members.size}"
        %br
        = "Chapters: #{challenge.readings.size}"
        %br
        = "Total Chapters To Read: #{challenge.membership_readings.size}"
        %br
        = "Total Chapters Read: #{challenge.membership_readings.read.size}"
        %br
        = "Start: #{challenge.begindate}"
        %br
        = "Start: #{challenge.enddate}"

