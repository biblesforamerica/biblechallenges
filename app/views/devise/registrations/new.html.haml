.container
  .row
    .col-md-6.col-md-offset-3.text-center
      %h3
        = t 'devise.registrations.new.create'
      %p
        = t 'devise.registrations.new.why'

  .row
    .col-md-4.col-md-offset-4
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: 'form'}) do |f|
        = devise_error_messages!
        %fieldset
          .form-group
            = f.label :name
            = f.text_field :name, autofocus: true, placeholder: I18n.t('devise.registrations.new.name'), autocomplete: 'off', class: 'form-control'
          .form-group
            = f.label :email
            = f.email_field :email, placeholder: I18n.t('devise.registrations.new.email'), autocomplete: 'off', class: 'form-control'
          .form-group
            = f.label :password
            = f.password_field :password, placeholder: I18n.t('devise.registrations.new.password'), autocomplete: 'off', class: 'form-control'
          .form-group
            = f.label :password_confirmation
            = f.password_field :password_confirmation, placeholder: I18n.t('devise.registrations.new.pass_confirm'), autocomplete: 'off', class: 'form-control'
          = f.submit I18n.t('devise.registrations.new.sign_up'), disable_with: I18n.t('devise.registrations.new.wait'), class: 'btn btn-primary btn-block'
          
          = render 'devise/shared/links'
