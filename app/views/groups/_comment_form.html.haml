= form_for [group, comment] do |f|
  - if comment.errors.any?
    - flash[:error] = comment.errors.full_messages.to_sentence
  .control-group
    .controls
      = f.text_area :content, rows: 5, required: true, class: "form-control"

    = hidden_field_tag :location, member_challenge_path(group.challenge, anchor: "mygroup")
    = f.hidden_field :commentable_id, value: group.id
    = f.hidden_field :commentable_type, value: group.class.to_s

  .control-group
    = f.submit I18n.t('groups._comment_form.post_comment'), class: 'btn btn-primary pull-right', disable_with: I18n.t('groups._comment_form.wait')
