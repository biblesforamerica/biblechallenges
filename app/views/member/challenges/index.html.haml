.section.primary.centered
  .container
    .title My Challenges
    .subtitle Challenges you join will be shown on this page.
    %br
    %a.btn{href: new_creator_challenge_path} Create A New Challenge



.section.container
  .col-md-12
    -if @user.membership_readings.any?
      .panel.panel-primary
        .panel-heading
          %strong
            My Personal Statistics
        = render partial: 'shared/statistics/personal_stat', locals: {user: current_user}

  - @challenges.each do |challenge|

    .col-md-6
      = render partial: 'shared/challenges/challenge_list_item', locals: {challenge: challenge}

